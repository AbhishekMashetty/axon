{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Batch Deployment Configuration Schema",
  "description": "Schema for validating YAML batch deployment configurations",
  "type": "object",
  "required": ["version", "deployments"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^v[0-9]+\\.[0-9]+$",
      "description": "Schema version (e.g., v1.0)",
      "examples": ["v1.0", "v1.1", "v2.0"]
    },
    "metadata": {
      "type": "object",
      "description": "Optional metadata about the deployment batch",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "Human-readable name for the deployment batch"
        },
        "description": {
          "type": "string",
          "maxLength": 500,
          "description": "Description of what this deployment batch does"
        },
        "author": {
          "type": "string",
          "maxLength": 100,
          "description": "Author of the deployment configuration"
        },
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp"
        },
        "tags": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Tags for categorizing the deployment"
        }
      }
    },
    "defaults": {
      "type": "object",
      "description": "Default values that can be overridden by individual deployments",
      "properties": {
        "environment_id": {
          "type": "string",
          "minLength": 1,
          "description": "Default environment identifier"
        },
        "infrastructure_id": {
          "type": "string",
          "minLength": 1,
          "description": "Default infrastructure identifier"
        },
        "docker_artifact_type": {
          "type": "string",
          "enum": ["docker", "helm", "kustomize"],
          "description": "Default Docker artifact type"
        },
        "timeout": {
          "type": "integer",
          "minimum": 60,
          "maximum": 3600,
          "description": "Default deployment timeout in seconds"
        },
        "retry_count": {
          "type": "integer",
          "minimum": 0,
          "maximum": 5,
          "description": "Default retry count for failed deployments"
        }
      }
    },
    "deployments": {
      "type": "array",
      "minItems": 1,
      "maxItems": 100,
      "description": "List of deployments to execute",
      "items": {
        "type": "object",
        "required": ["pillar", "service_name", "docker_artifact_type", "docker_image_version"],
        "properties": {
          "pillar": {
            "type": "string",
            "enum": ["clearing", "risk", "data", "shared"],
            "description": "Target pillar for deployment"
          },
          "service_name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 128,
            "pattern": "^[a-zA-Z0-9][a-zA-Z0-9-_]*$",
            "description": "Name of the service to deploy"
          },
          "docker_artifact_type": {
            "type": "string",
            "enum": ["docker", "helm", "kustomize"],
            "description": "Type of Docker artifact to deploy"
          },
          "docker_image_version": {
            "type": "string",
            "minLength": 1,
            "maxLength": 128,
            "description": "Version/tag of the Docker image"
          },
          "environment_id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64,
            "description": "Target environment identifier"
          },
          "infrastructure_id": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64,
            "description": "Target infrastructure identifier"
          },
          "metadata": {
            "type": "object",
            "description": "Additional metadata for the deployment",
            "properties": {
              "priority": {
                "type": "integer",
                "minimum": 1,
                "maximum": 10,
                "default": 5,
                "description": "Deployment priority (1=lowest, 10=highest)"
              },
              "timeout": {
                "type": "integer",
                "minimum": 60,
                "maximum": 3600,
                "description": "Deployment timeout in seconds"
              },
              "retry_count": {
                "type": "integer",
                "minimum": 0,
                "maximum": 5,
                "default": 3,
                "description": "Number of retries for failed deployment"
              },
              "tags": {
                "type": "array",
                "items": {"type": "string"},
                "maxItems": 10,
                "description": "Tags for the deployment"
              },
              "dependencies": {
                "type": "array",
                "items": {"type": "string"},
                "maxItems": 10,
                "description": "List of service names this deployment depends on"
              },
              "rollback_strategy": {
                "type": "string",
                "enum": ["automatic", "manual", "none"],
                "default": "manual",
                "description": "Strategy for handling rollbacks"
              },
              "health_check": {
                "type": "object",
                "properties": {
                  "enabled": {"type": "boolean", "default": true},
                  "path": {"type": "string"},
                  "port": {"type": "integer", "minimum": 1, "maximum": 65535},
                  "timeout": {"type": "integer", "minimum": 1, "maximum": 300}
                }
              }
            }
          }
        }
      }
    }
  }
}
